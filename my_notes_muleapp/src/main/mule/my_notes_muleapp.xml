	<db:config name="Database_Config" doc:name="Database Config" doc:id="b9b0d097-d422-4b76-abe3-bed935a8c286" >
		<db:my-sql-connection host="localhost" port="3306" user="root" password="testing" database="testing"/>
	</db:config>
	<flow name="my_notes_muleappFlow" doc:id="7779286c-92e7-4f40-ad62-6217b938a5a6" >
		<http:listener doc:name="Listener" doc:id="09e44b34-0e2f-4ddd-a727-237b9d9c0514" path="/Notes" config-ref="HTTP_Listener_config_8082" allowedMethods="GET"/>
		<db:select doc:name="Select notes" doc:id="212d8630-c0f5-49e9-aa98-5649c5ee2249" config-ref="Database_Config">
			<db:sql ><![CDATA[SELECT * FROM Notes]]></db:sql>
		</db:select>
		<ee:transform doc:name="Transform Message" doc:id="9fa7b10a-6ff5-4a1d-8291-e9a0f44e9a0a" >
			<ee:message >
				<ee:set-payload ><![CDATA[%dw 2.0
output application/json
---
payload map ( payload01 , indexOfPayload01 ) -> {
	id: payload01.id,
	name: payload01.title as String,
	message: payload01.content as String,
	userid: payload01.userid,
	datecreated: payload01.datecreated as String
}]]></ee:set-payload>
			</ee:message>
		</ee:transform>
		<logger level="INFO" doc:name="Logger" doc:id="018273d9-ee15-4cea-b3a1-1d320af6e6d7" />
