			<ee:repeatable-file-store-stream bufferUnit="MB" />
		</http:listener>
		<set-payload value='#["Mi primer Mule App"]' doc:name="Set Payload" doc:id="83a495f0-6d1c-403b-ac1f-4ab53a71cd0d" />
	</flow>
